      }

      .nav-right {
        width: 100%;
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }

      .nav-right input {
        width: 100%;
        margin-bottom: 10px;
      }

      .nav-right .new-btn {
        width: 100%;
      }
    }
