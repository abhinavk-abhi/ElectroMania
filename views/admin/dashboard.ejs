<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ElectroMania</title>
  <link rel="stylesheet" href="/styles/dashboard.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Bellefair&display=swap" rel="stylesheet">
  <style>
    body {
      background-color: #f9f9f9;
    }
    .card-graph-placeholder {
      height: 280px;
      background-color: #f0f0f0;
      border-radius: 12px;
    }
    .card-small-graph {
      height: 180px;
      background-color: #f0f0f0;
      border-radius: 12px;
    }
    .card-mid-graph {
      height: 220px;
      background-color: #f0f0f0;
      border-radius: 12px;
    }
    .card-full-graph {
      height: 300px;
      background-color: #f0f0f0;
      border-radius: 12px;
    }
    .sidebar {
      background-color: white;
      padding: 30px 20px;
      border-radius: 15px;
      height: 100vh;
      color: black;
    }
    .sidebar .nav-link {
      color: black !important;
      margin-bottom: 15px;
      font-weight: 500;
      padding: 10px 15px;
      border-radius: 10px;
      transition: background 0.3s, color 0.3s;
    }
    .sidebar .nav-link:hover {
      background-color: rgba(0, 0, 0, 0.05);
    }
    .sidebar .nav-link.active {
      background-color: #4d44ad;
      color: white !important;
    }
    .sidebar .nav-link.active i {
      color: white !important;
    }
    .sidebar .nav-link i {
      color: black;
    }
    .navbar-custom {
      font-family: 'Bellefair', serif;
      font-size: 32px;
      background-color: #fff;
      padding: 10px 30px;
      border-bottom: 1px solid #ccc;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .navbar-custom .search-bar {
      flex: 1;
      margin: 0 20px;
    }
    .navbar-custom .search-bar input {
      width: 100%;
      padding: 8px 12px;
      border-radius: 10px;
      border: 1px solid #ccc;
    }
    .navbar-custom .navbar-icons i,
    .navbar-custom .navbar-icons img {
      margin-left: 15px;
      font-size: 18px;
      cursor: pointer;
    }
    .card-body h6 {
      font-size: 1rem;
      font-weight: 600;
    }
    .card-body h5 {
      font-size: 1.5rem;
    }
    .card-body small {
      font-size: 0.875rem;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <div class="navbar-custom">
    <div>ElectroMania</div>
    <div class="search-bar">
      <input type="text" placeholder="Search">
    </div>
    <div class="navbar-icons">
      <i class="fas fa-search"></i>
      <i class="fas fa-envelope"></i>
      <i class="fas fa-bell"></i>
      <img src="/images/user.png" alt="Profile" width="30" height="30" class="rounded-circle">
    </div>
  </div>

  <div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar me-3">
      <ul class="nav flex-column">
        <li class="nav-item"><a href="/admin/dashboard" class="nav-link active"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
        <li class="nav-item"><a href="/admin/orders" class="nav-link"><i class="fas fa-shopping-cart me-2"></i>Orders</a></li>
        <li class="nav-item"><a href="/admin/products" class="nav-link"><i class="fas fa-boxes me-2"></i>Products</a></li>
        <li class="nav-item"><a href="/admin/sales-report" class="nav-link"><i class="fas fa-chart-line me-2"></i>Sales Report</a></li>
        <li class="nav-item"><a href="/admin/customers" class="nav-link"><i class="fas fa-users me-2"></i>Customers</a></li>
        <li class="nav-item"><a href="/admin/coupons" class="nav-link"><i class="fas fa-tags me-2"></i>Coupons</a></li>
        <li class="nav-item"><a href="/admin/categories" class="nav-link"><i class="fas fa-th-large me-2"></i>Categories</a></li>
        <li class="nav-item"><a href="/admin/banners" class="nav-link"><i class="fas fa-image me-2"></i>Banners</a></li>
        <li class="nav-item"><a href="/admin/returns" class="nav-link"><i class="fas fa-undo me-2"></i>Refund/Returns</a></li>
        <li class="nav-item"><a href="/admin/logout" class="nav-link"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="p-4 w-100">
      <!-- Sales Summary Cards -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card card-body">
            <h6>Total Sales</h6>
            <h5>â‚¹70k</h5>
            <small>-8% than yesterday</small>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-body">
            <h6>Total Orders</h6>
            <h5>300</h5>
            <small>+5% than yesterday</small>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-body">
            <h6>Products Sold</h6>
            <h5>50</h5>
            <small>+2% than yesterday</small>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-body">
            <h6>New Customers</h6>
            <h5>15</h5>
            <small>-1% than yesterday</small>
          </div>
        </div>
      </div>

      <!-- Graphs and Charts -->
      <div class="row">
        <div class="col-md-6">
          <div class="card card-body card-graph-placeholder">Order Summary Graph</div>
        </div>
        <div class="col-md-6">
          <div class="card card-body card-small-graph">Product Sold Graph</div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-6">
          <div class="card card-body card-mid-graph">Total Revenue Graph</div>
        </div>
        <div class="col-md-6">
          <div class="card card-body card-full-graph">Customer Map Graph</div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
