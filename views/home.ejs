            box-sizing: border-box;
            position: relative;
        }
        .brand-name {
            font-family: 'Bellefair', serif;
            font-size: 48px;
            font-weight: normal;
            text-decoration: none;
            color: white;
            line-height: 1;
            margin-right: 60px;
            display: flex;
            align-items: center;
            height: 100%;
            padding-top: 5px;
        }
        .nav-links {
            display: flex;
            gap: 50px;
            font-family: 'Outfit', sans-serif;
            font-size: 16px;
            align-items: center;
            flex: 1;
            justify-content: center;
            margin: 0 20px;
            height: 100%;
            position: relative;
            padding-top: 5px;
        }
        .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            gap: 6px;
            height: 50px;
            padding: 0 10px;
            font-size: 15px;
        }
        .nav-links a:hover {
            opacity: 0.8;
        }
        .dropdown {
            position: relative;
            display: inline-flex;
            align-items: center;
            height: 100%;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            border-radius: 4px;
            z-index: 1000;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            margin-top: 5px;
        }
        .dropdown-content::before {
            content: '';
            position: absolute;
            top: -6px;
            left: 50%;
            transform: translateX(-50%) rotate(45deg);
            width: 12px;
            height: 12px;
            background-color: white;
            box-shadow: -2px -2px 5px rgba(0,0,0,0.05);
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .dropdown-content a {
            color: #333;
            padding: 12px 20px;
            text-decoration: none;
            display: block;
            transition: background-color 0.3s ease;
            position: relative;
            z-index: 1;
            font-size: 14px;
        }
        .dropdown-content a:hover {
            background-color: #f5f5f5;
            opacity: 1;
        }
        .nav-right {
            display: flex;
            gap: 20px;
            align-items: center;
            height: 100%;
            position: relative;
            padding-top: 5px;
        }
        .search-bar {
            padding: 0 15px;
            border: none;
            border-radius: 4px;
            width: 240px;
            font-family: 'Outfit', sans-serif;
            margin-right: 8px;
            font-size: 14px;
            height: 50px;
        }
        .search-btn, .signup-btn {
            background: #4D44AD;
            color: white;
            border: none;
            padding: 0 25px;
            border-radius: 4px;
            cursor: pointer;
            font-family: 'Outfit', sans-serif;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 50px;
            font-size: 15px;
        }
        .search-btn {
            padding: 0;
            width: 50px;
            height: 50px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        .search-btn:hover, .signup-btn:hover {
            opacity: 0.9;
        }
        .hero-section {
            background: url('/images/hero.png') center/cover;
            padding: 120px 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
            max-width: 1200px;
            margin: 40px auto 0;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(40, 81, 125, 0.85), rgba(25, 36, 48, 0.95));
            z-index: 1;
        }
        .hero-content {
