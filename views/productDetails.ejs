        // Image Zoom functionality
        document.addEventListener('DOMContentLoaded', function() {
            const mainImage = document.getElementById('mainImage');
            const zoomResult = document.getElementById('zoomResult');
            const productInfo = document.querySelector('.product-info');
            
            let isZooming = false;
            const ZOOM_LEVEL = 2.5;
            
            function getOffset(el) {
                const rect = el.getBoundingClientRect();
                return {
                    left: rect.left + window.scrollX,
                    top: rect.top + window.scrollY
                };
            }
            
            function updateZoom(e) {
                if (!isZooming) return;
                
                const img = mainImage;
                const result = zoomResult;
                const offset = getOffset(img);
                
                // Calculate mouse position relative to image
                const mouseX = e.pageX - offset.left;
                const mouseY = e.pageY - offset.top;
                
                // Calculate position ratios (0 to 1)
                const ratioX = mouseX / img.offsetWidth;
                const ratioY = mouseY / img.offsetHeight;
                
                // Calculate background size
                const bgWidth = img.offsetWidth * ZOOM_LEVEL;
                const bgHeight = img.offsetHeight * ZOOM_LEVEL;
                
                // Calculate maximum background position
                const maxBgX = bgWidth - result.offsetWidth;
                const maxBgY = bgHeight - result.offsetHeight;
                
                // Calculate background position
                const bgX = Math.min(maxBgX, Math.max(0, maxBgX * ratioX));
                const bgY = Math.min(maxBgY, Math.max(0, maxBgY * ratioY));
                
                // Update result background
                result.style.backgroundImage = `url('${img.src}')`;
                result.style.backgroundSize = `${bgWidth}px ${bgHeight}px`;
                result.style.backgroundPosition = `-${bgX}px -${bgY}px`;
            }
            
            mainImage.addEventListener('mouseenter', function() {
                isZooming = true;
                zoomResult.style.display = 'block';
                productInfo.classList.add('zooming');
            });
            
            mainImage.addEventListener('mouseleave', function() {
                isZooming = false;
                zoomResult.style.display = 'none';
                productInfo.classList.remove('zooming');
            });
            
            mainImage.addEventListener('mousemove', updateZoom);
            
            window.updateMainImage = function(src) {
                mainImage.src = src;
                document.querySelectorAll('.thumbnail').forEach(thumb => {
                    thumb.classList.remove('active');
                    if (thumb.src === src) {
                        thumb.classList.add('active');
                    }
                });
                
                isZooming = false;
                zoomResult.style.display = 'none';
                productInfo.classList.remove('zooming');
            }
        });

