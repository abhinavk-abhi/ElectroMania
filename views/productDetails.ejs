<body>
     <!-- Navbar -->
     <nav class="navbar">
        <a href="/" class="brand-name">ElectroMania</a>
        
        <!-- Add hamburger menu button for mobile/tablet -->
        <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvas" aria-controls="navbarOffcanvas">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Desktop Navigation -->
        <div class="nav-links d-none d-lg-flex">
            <a href="/"><i class="fas fa-home"></i> Home</a>
            <a href="/shop"><i class="fas fa-shopping-bag"></i> Shop</a>
        </div>

        <!-- Desktop Right Section -->
        <div class="nav-right d-none d-lg-flex">
               <a href="/cart" >
                <i class="fa fa-shopping-cart"></i>
            </a>
            <% if (user) { %>
                <div class="dropdown">
                    <button class="dropdown-toggle">
                        <i class="fas fa-user"></i>
                        <%= user.name %>
                    </button>
                    <div class="dropdown-content">
                        <a href="/profile">Profile</a>
                        <a href="/orders">Orders</a>
                        <a href="/logout">Logout</a>
                    </div>
                </div>
            <% } else { %>
                <a href="/user/login" class="signup-btn">Sign in</a>
            <% } %>
        </div>

        <!-- Mobile/Tablet Offcanvas Menu -->
        <div class="offcanvas offcanvas-end d-lg-none" tabindex="-1" id="navbarOffcanvas" aria-labelledby="navbarOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="navbarOffcanvasLabel">Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <!-- Mobile Navigation Links -->
                <div class="mobile-nav-links">
                    <a href="/"><i class="fas fa-home"></i> Home</a>
                    <a href="/shop"><i class="fas fa-shopping-bag"></i> Shop</a>
                </div>

                <!-- Mobile Search -->
                

                <!-- Mobile User Section -->
                <div class="mobile-user-section">
                    <a href="/user/cart" class="mobile-nav-item">
                        <i class="fas fa-shopping-cart"></i> Cart
                    </a>
                    <% if (user) { %>
                        <a href="/profile" class="mobile-nav-item">
                            <i class="fas fa-user"></i> Profile
                        </a>
                        <a href="/user/orders" class="mobile-nav-item">
                            <i class="fas fa-box"></i> Orders
                        </a>
                        <a href="/logout" class="mobile-nav-item">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    <% } else { %>
                        <a href="/user/login" class="mobile-nav-item">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="product-details-container">
        <div class="row">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                 <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
                 <li class="breadcrumb-item"><%= product.name%></li>

                </ol>
              </nav>
              
            <!-- Product Images -->
            <div class="col-md-6">
                <div class="product-image-container">
                    <div class="img-zoom-container">
                        <img src="<%= product.images[0] %>" 
                             alt="<%= product.name %>" 
                             class="product-image" 
                             id="mainImage">
                    </div>
                    <div class="thumbnail-container">
                        <% product.images.forEach((image, index) => { %>
                            <img src="<%= image %>" 
                                 class="thumbnail <%= index === 0 ? 'active' : '' %>" 
                                 alt="Product view <%= index + 1 %>"
                                 onmouseenter="updateMainImage(this.src)">
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-6">
                <div class="product-info-wrapper">
                    <div id="zoomResult" class="img-zoom-result"></div>
                    
                    <div class="product-info">
                        <h1 class="product-title"><%= product.name %></h1>
                        <h5 class="product-description"><%= product.description%></h5>
                        <div class="product-price">
                            <p>
                                <% const displayOffer = Math.max(product.productOffer || 0, product.category.offer || 0); if (displayOffer > 0) {  %>
                                <span class="text-danger fs-2 fw-bold me-2">₹<%= Math.round(product.price - (product.price * displayOffer / 100)) %></span>
                                <del class="text-muted fs-5 me-3">₹<%= product.price %></del>
                                    <strong><%= displayOffer || 0 %>% OFF</strong> 
                                <% } %>
                            </p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 mt-4">
                            <button id="addtocartBtn" class="btn cart-btn flex-grow-1">Add to Cart</button>
                            <button class="btn btn-outline-secondary  w-50" id="addToWishlistBtn"><i class="fa fa-heart me-2"></i><span class="wishlist-text">Add to Wishlist</span></button>
                        </div>

                        <div class="row g-3 my-3">
                            <div class="col-md-4">
                                <label for="quantity" class="form-label fw-bold">Quantity:</label>
                                <select id="quantity" name="quantity" class="form-select">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <option value="<%= i %>"><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
