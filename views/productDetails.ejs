        }

        .feature-icon {
            text-align: center;
            color: #666;
        }

        .feature-icon i {
            font-size: 24px;
            color: #28517D;
            margin-bottom: 5px;
        }

        /* Related Products */
        .related-products {
            margin-top: 40px;
            padding: 0 15px;
        }

        .section-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

