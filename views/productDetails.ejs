            border-radius: 15px;
            padding: 30px;
            margin: 20px auto;
            max-width: 1200px;
            position: relative;
            z-index: 1;
        }

        .product-image-container {
            width: 100%;
            max-width: 400px;
            margin: 0 auto 20px;
        }

        .product-image {
            width: 100%;
            height: auto;
            border-radius: 8px;
            cursor: crosshair;
        }

        .thumbnail-container {
            display: flex;
            gap: 10px;
            margin-top: 15px;
            overflow-x: auto;
            padding-bottom: 10px;
            position: relative;
            z-index: 2;
        }

        .thumbnail {
            width: 60px;
            height: 60px;
            border: 2px solid #ddd;
            border-radius: 5px;
            cursor: pointer;
            padding: 3px;
            object-fit: cover;
        }

        .thumbnail.active {
            border-color: #28517D;
        }

        .product-info {
            padding: 20px;
        }

        .product-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
        }

        .product-description {
            width: 100%;
            max-width: 400px;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .product-price {
            font-size: 28px;
            font-weight: bold;
            color: #28517D;
            margin-bottom: 20px;
        }

        .discount {
            color: #dc3545;
            font-size: 18px;
            margin-left: 10px;
        }

        .feature-icons {
