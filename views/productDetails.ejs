    <style>
        /* Product Details Styles */
        body {
            background-color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        /* Container */
.dropdown {
    position: relative;
    display: inline-block;
}

/* Toggle button */
.dropdown-toggle {
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    color: #fff;
    font-size: 15px;
    font-weight: 500;
    height: 50px;
    text-decoration: none;
    padding: 0 16px;
    background-color: transparent;
    border: none;
    outline: none;
}

/* Dropdown icon spacing */
.dropdown-toggle i {
    font-size: 18px;
}

/* Dropdown content */
.dropdown-content {
    display: none;
    position: absolute;
    right: 0;
    background-color: #ffffff;
    min-width: 100px;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    margin-top: 10px;
    padding: 8px 0;
    overflow: hidden;
    border: 1px solid #e0e0e0;
}

/* Dropdown links */
.dropdown-content a {
    color: #333;
    padding: 12px 20px;
    text-decoration: none;
    display: block;
    font-size: 14px;
    transition: background 0.3s ease, color 0.3s ease;
}

/* Hover effect */
.dropdown-content a:hover {
    background-color: #f0f0f093;
    color: #000;
}

/* Show dropdown on .active class */
.dropdown.active .dropdown-content {
    display: block;
}

        .navbar {
        z-index: 1001;
        background: #4b449783;
        padding: 0 20px; /* Reduced side padding */
        display: flex;
        justify-content: space-between; /* Changed from space-evenly */
