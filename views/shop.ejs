    </footer>

    <script>
        // JavaScript for interactive elements
        document.addEventListener('DOMContentLoaded', function() {
            // Heart icon toggle
            const heartIcons = document.querySelectorAll('.heart-icon');
            heartIcons.forEach(icon => {
                icon.addEventListener('click', function() {
                    if (this.style.color === 'gray') {
                        this.style.color = 'red';
                    } else {
                        this.style.color = 'gray';
                    }
                });
            });

            // Add to cart button effect
            const addButtons = document.querySelectorAll('.add-to-cart');
            addButtons.forEach(button => {
                button.addEventListener('click', function() {
                    this.textContent = 'Added';
                    this.style.backgroundColor = '#28a745';
                    setTimeout(() => {
                        this.textContent = 'Add to Cart';
                        this.style.backgroundColor = '#4a69bd';
                    }, 1000);
                });
            });

            // Pagination functionality
            const paginationButtons = document.querySelectorAll('.pagination button');
            const pageDots = document.querySelectorAll('.page-dot');

            paginationButtons.forEach((button, index) => {
                if (index > 0 && index < paginationButtons.length - 1) {
                    button.addEventListener('click', function() {
                        paginationButtons.forEach(btn => btn.classList.remove('active'));
                        this.classList.add('active');
                        
                        pageDots.forEach(dot => dot.classList.remove('active'));
                        pageDots[index - 1].classList.add('active');
                    });
                }
            });

            pageDots.forEach((dot, index) => {
                dot.addEventListener('click', function() {
                    pageDots.forEach(d => d.classList.remove('active'));
                    this.classList.add('active');
                    
                    paginationButtons.forEach(btn => btn.classList.remove('active'));
                    paginationButtons[index + 1].classList.add('active');
                });
            });
        });
    </script>
</body>
</html>