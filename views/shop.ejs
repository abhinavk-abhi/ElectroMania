    <div class="container-fluid px-4">
        <div class="row">
            <!-- Sidebar: Offcanvas for mobile/tablet, visible on desktop -->
            <div class="col-lg-2">
                <!-- Filter Button for mobile/tablet -->
                <button class="btn btn-primary d-lg-none mb-3 w-100 mt-3 type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilters" aria-controls="offcanvasFilters">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <!-- Sidebar (desktop) -->
                <div class="sidebar d-none d-lg-block">
                    <div class="filter-title">Filter Items</div>
                    <form id="filterForm" action="/shop" method="get">
                        <!-- Preserve search and sorting -->
                        <input type="hidden" name="result" value="<%= appliedFilters && appliedFilters.result ? appliedFilters.result : '' %>">
                        <input type="hidden" name="sort" value="<%= appliedFilters && appliedFilters.sort ? appliedFilters.sort : 'newest' %>">


                    <!-- Category Filter -->
                    <div class="filter-section">
                        <h6>Category</h6>
                        <ul class="list-unstyled">
