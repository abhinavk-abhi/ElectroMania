    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle wishlist heart icon
        document.querySelectorAll('.wishlist-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                icon.classList.toggle('far');
                icon.classList.toggle('fas');
            });
        });

        // Price input validation
        const minPriceInput = document.querySelector('.min-price');
        const maxPriceInput = document.querySelector('.max-price');

        minPriceInput.setAttribute('min', '0');
        maxPriceInput.setAttribute('min', '1');

        minPriceInput.addEventListener('input', () => {
            let minValue = parseInt(minPriceInput.value) || 0;
            let maxValue = parseInt(maxPriceInput.value) || 1;
            
            if (minValue < 0) {
                minValue = 0;
                minPriceInput.value = minValue;
                minPriceInput.classList.add('is-invalid');
                setTimeout(() => minPriceInput.classList.remove('is-invalid'), 800);
            }
            
            if (minValue >= maxValue) {
                minValue = maxValue - 1;
                minPriceInput.value = minValue;
                minPriceInput.classList.add('is-invalid');
                setTimeout(() => minPriceInput.classList.remove('is-invalid'), 800);
            }
        });

        maxPriceInput.addEventListener('input', () => {
            let maxValue = parseInt(maxPriceInput.value) || 1;
            let minValue = parseInt(minPriceInput.value) || 0;
            
            if (maxValue < 1) {
                maxValue = 1;
                maxPriceInput.value = maxValue;
                maxPriceInput.classList.add('is-invalid');
                setTimeout(() => maxPriceInput.classList.remove('is-invalid'), 800);
            }
            
            if (maxValue <= minValue) {
                maxValue = minValue + 1;
                maxPriceInput.value = maxValue;
                maxPriceInput.classList.add('is-invalid');
                setTimeout(() => maxPriceInput.classList.remove('is-invalid'), 800);
            }
        });
    </script>
</body>
