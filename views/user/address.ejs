        <script>
          document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("addresses").classList.add("active");

            document.getElementById('newAddress').addEventListener('submit', async function (e) {

              e.preventDefault()

              const name = document.getElementById('name').value.trim();
              const phone = document.getElementById('mobile').value.trim();
              const pincode = document.getElementById('pincode').value.trim();
              const locality = document.getElementById('locality').value.trim();
              const address = document.getElementById('address').value.trim();
              const city = document.getElementById('city').value.trim();
              const state = document.getElementById('state').value;
              const landmark = document.getElementById('landmark').value.trim();
              const altPhone = document.getElementById('altPhone').value.trim();
              const addressType = document.querySelector('input[name="addressType"]:checked').value;
              const _id = document.getElementById('userId').value

              const errorMessages = document.querySelectorAll(".errorText");
              let isValid = true;

              // Clear previous errors
              errorMessages.forEach(msg => msg.innerText = "");

              // Name validation
              if (!name) {
                errorMessages[0].innerText = "Name is required.";
                isValid = false;
              }

              // Phone validation (basic 10-digit check)
              if (!phone) {
                errorMessages[1].innerText = "Mobile number is required.";
                isValid = false;
              } else if (!/^\d{10}$/.test(phone)) {
                errorMessages[1].innerText = "Enter a valid 10-digit mobile number.";
                isValid = false;
              }

              // Pincode validation (6-digit number)
              if (!pincode) {
                errorMessages[2].innerText = "Pincode is required.";
                isValid = false;
              } else if (!/^\d{6}$/.test(pincode)) {
                errorMessages[2].innerText = "Enter a valid 6-digit pincode.";
                isValid = false;
              }

              // Locality validation
              if (!locality) {
                errorMessages[3].innerText = "Locality is required.";
                isValid = false;
              }

              // Address validation
              if (!address) {
                errorMessages[4].innerText = "Address is required.";
                isValid = false;
              }

              // City validation
              if (!city) {
                errorMessages[5].innerText = "City/District/Town is required.";
                isValid = false;
              }

              // State validation
              if (!state) {
                errorMessages[6].innerText = "Please select a state.";
                isValid = false;
              }

              // Landmark is optional — no validation

              // Alternate phone is optional, but validate if entered
              if (altPhone && !/^\d{10}$/.test(altPhone)) {
                errorMessages[7].innerText = "Enter a valid 10-digit alternate phone number.";
                isValid = false;
              }

              // Address type radio validation
              if (!addressType) {
                errorMessages[8].innerText = "Please select address type.";
                isValid = false;
              }

              // Final decision
              if (!isValid) {
                event.preventDefault(); // Prevent form submission if there are errors
              }


              const formData = {
                userId : _id,
                name: name,
                phone: phone,
                pincode: pincode,
                locality: locality,
                address: address,
                city: city,
                state: state,
                landmark: landmark,
                altPhone: altPhone,
                addressType: addressType
              }

              try {

                const response = await fetch('/user/address', {
                  method: "POST",
                  headers : { "Content-Type" : "application/json" },
                  body: JSON.stringify(formData)
                })

                const data = await response.json()

                if (!response.ok) {
                  Swal.fire({
                    icon: "warning",
                    text: data.error || "Failed to add address",
                    timer: 2000,
                    showConfirmButton: false
                  })
                } else {
                  Swal.fire({
                    icon: "success",
                    text: data.message || "Address added successfully.",
                    timer: 2000,
                    showConfirmButton: false
                  })
                }

              } catch (error) {
                console.log(error)
              }

            });


          })
        </script>