    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(to top, #2A5788, #0D1B2A);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .forgot-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            padding: 30px;
            text-align: center;
        }

        h2 {
            font-family: 'Outfit', sans-serif; /* Using Outfit as per recent preference */
            font-weight: 300; /* Lighter weight for thinner appearance */
            font-size: 48px;
            color: #1E2A44;
            margin-bottom: 20px;
            text-shadow: none;
            outline: none;
            -webkit-text-stroke-width: 0;
        }

        .instruction {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        .form-group {
            width: 100%;
            max-width: 350px;
            margin: 0 auto 20px auto;
            text-align: left;
        }

        .form-control {
            width: 100%;
            max-width: 350px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            font-family: 'Outfit', sans-serif;
            outline: none;
        }

        .send-btn {
            background: #6B46C1;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'Outfit', sans-serif;
            width: 100%;
            max-width: 350px;
            margin-top: 20px;
        }

        .send-btn:hover {
            background: #5A36A4;
        }

        .back-link {
            margin-top: 20px;
            font-size: 14px;
            color: #6B46C1;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .branding {
            margin-top: 10px;
            font-size: 14px;
            color: #666;
            font-family: 'Bellefair', serif;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .forgot-container {
                max-width: 90%;
                padding: 25px;
            }

            h2 {
                font-size: 40px;
            }

            .instruction {
                font-size: 15px;
            }

            .form-control {
                max-width: 100%;
                padding: 10px;
            }

            .send-btn {
                max-width: 100%;
                padding: 10px;
            }
        }

        @media (max-width: 576px) {
            .forgot-container {
                padding: 20px;
            }

            h2 {
                font-size: 36px;
                margin-bottom: 15px;
            }

            .instruction {
                font-size: 14px;
                margin-bottom: 15px;
            }

            .form-control {
                font-size: 13px;
                padding: 8px;
            }

            .send-btn {
                font-size: 14px;
                padding: 8px;
                margin-top: 15px;
            }

            .back-link,
            .branding {
                font-size: 13px;
            }
        }

        @media (max-width: 400px) {
            .forgot-container {
                padding: 15px;
            }

            h2 {
                font-size: 32px;
                margin-bottom: 10px;
            }

            .instruction {
                font-size: 13px;
                margin-bottom: 10px;
            }

            .form-control {
                font-size: 12px;
                padding: 6px;
            }

            .send-btn {
                font-size: 13px;
                padding: 6px;
                margin-top: 10px;
            }

            .back-link,
            .branding {
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <div class="forgot-div">
            <div class="px-3 py-3">
                <h2 class="fw-bold mb-4 text-center">Forgot Password?</h2>
                <p class="instruction">Please confirm your mail address</p>

                <!-- Email Input -->
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email address" id="email" name="email">
                </div>

                <!-- Send Email Button -->
                <button type="submit" class="btn send-btn">Send Email</button>

                <!-- Back Link -->
                <a href="/user/login" class="back-link">Go back to Login page</a>

                <!-- Branding -->
                <p class="branding">ElectroMania</p>
            </div>
        </div>
    </div>
</body>