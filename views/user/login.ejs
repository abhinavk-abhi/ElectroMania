    <head>
        <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    </head>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Outfit', sans-serif;
                background: linear-gradient(to top, #2A5788, #0D1B2A); /* Theme gradient */
                min-height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px;
            }

            .log-container {
                background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
                border-radius: 20px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 100%;
                max-width: 500px; /* Narrower container to match the image */
                padding: 30px;
                text-align: center;
            }

            h2 {
                font-family: 'outfit', serif;
                font-size: 40px;
                color: #1E2A44;
                margin-bottom: 20px;
            }

            .google-btn {
                background: #fff;
                border: 1px solid #ccc;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
                display: block;
                margin: 0 auto 20px auto;
                width: 100%;
                max-width: 250px;
                font-family: 'Outfit', sans-serif;
                text-align: center;
                text-decoration: none;
                color: #000;
            }

            .google-btn::before {
                content: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="20" height="20"><path fill="%234285F4" d="M24 9.5c3.5 0 6.6 1.2 9.1 3.5l6.7-6.7C35.7 2.8 29.9 0 24 0 14.6 0 6.8 5.2 2.9 12.5l7.4 5.7c1.6-4.8 5.6-8.5 10.7-9.7z"/><path fill="%2334A853" d="M46.3 24.3c0-1.4-.1-2.8-.4-4.1H24v7.7h10.6c-.5 2.6-1.9 4.8-4.1 6.3l6.7 5.2c3.9-3.6 6.1-8.9 6.1-15.1z"/><path fill="%23FBBC05" d="M13.8 28.8c-1.6-1.2-2.6-2.9-2.6-4.8s1-3.6 2.6-4.8l-7.4-5.7C4.2 14.5 2 18.9 2 24s2.2 9.5 5.4 12.5l7.4-5.7z"/><path fill="%23EA4335" d="M24 47c6.2 0 11.4-2 15.2-5.4l-6.7-5.2c-1.9 1.3-4.3 2.1-7.5 2.1-5.7 0-10.5-3.8-12.2-9l-7.4 5.7C6.8 42.8 14.6 47 24 47z"/></svg>');
                margin-right: 10px;
            }

            .divider {
                margin: 20px 0;
                color: #666;
                font-size: 14px;
                position: relative;
            }

            .divider span {
                background: rgba(255, 255, 255, 0.9);
                padding: 0 10px;
            }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: #ccc;
                z-index: -1;
            }

            #loginForm {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .form-group {
                position: relative;
                width: 100%;
                max-width: 350px;
                margin: 10px 0;
                text-align: left;
            }

            .form-control {
                width: 100%;
                max-width: 350px;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 10px;
                font-family: 'Outfit', sans-serif;
                font-size: 14px;
            }

            .forgot-password {
                position: absolute;
                right: 0;
                top: 120%;
                transform: translateY(-50%);
                font-size: 14px;
                color: #6B46C1;
                text-decoration: none;
            }

            .forgot-password:hover {
                text-decoration: underline;
            }

            .text-danger {
                color: #dc3545;
                font-size: 14px;
                margin-bottom: 15px;
            }

            .d-none {
                display: none;
            }

            .send-btn {
                background: #6B46C1;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 10px;
                cursor: pointer;
                font-family: 'Outfit', sans-serif;
                width: 100%;
                max-width: 350px;
                margin-top: 20px;
            }

            .send-btn:hover {
                background: #5A36A4;
            }

            .signup-text {
                margin-top: 20px;
                font-size: 14px;
                color: #666;
            }

            .signup-text a {
                color: #6B46C1;
                text-decoration: none;
            }

            .signup-text a:hover {
                text-decoration: underline;
            }

            .branding {
                margin-top: 10px;
                font-size: 14px;
                color: #666;
                font-family: 'Bellefair', serif;
            }

            /* Responsive Design */
            @media (max-width: 576px) {
                .log-container {
                    padding: 20px;
                }

                h2 {
                    font-size: 36px;
                }

                .form-control,
                .send-btn,
                .google-btn {
                    max-width: 100%;
                }

                .google-btn {
                    padding: 8px 16px;
                }

                .forgot-password {
                    font-size: 12px;
                }
            }
        </style>
    </head>
    <body>
        <div class="container log-container">
            <div class="login-div">
                <div class="px-3 py-3">
                    <h2 class="fw-bold mb-4 text-center">Welcome Back</h2>

                    <!-- Google Login -->
                    <div class="google-btn bg-white">
                        <a href="/google">Login with Google</a>
                    </div>

                    <!-- Divider -->
                    <div class="divider">
                        <span>or</span>
                    </div>

                    <!-- Login Form -->
                    <form id="loginForm">
                        <!-- Error Message Display -->
                        <p id="errorMessageContainer" class="text-danger text-center <%= errorMessage ? '' : 'd-none' %>">
                            <% if (errorMessage) { %>
                                <span id="errorText"><%= errorMessage %></span>
                            <% } else { %>
                                <span id="errorText"></span>
                            <% } %>
                        </p>

                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" id="email" name="email">
                        </div>

                        <div class="form-group">
                            <br>
                            <input type="password" class="form-control" placeholder="Password" id="password" name="password">
                            <a href="/user/forgotPassword" class="forgot-password">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn send-btn">Login</button>
                    </form>

                    <!-- Sign Up -->
                    <p class="signup-text">New user? <a href="/register">Sign up now...</a></p>

                    <!-- Branding -->
                    <p class="branding">ElectroMania</p>
                </div>
            </div>
        </div>

        <script>
            document.getElementById("loginForm").addEventListener("submit", async function (event) {
                event.preventDefault();

                const email = document.getElementById("email").value.trim();
                const password = document.getElementById("password").value.trim();
                const errorMessageContainer = document.getElementById("errorMessageContainer");
                const errorText = document.getElementById("errorText");


                errorText.innerText = "";
                errorMessageContainer.classList.add("d-none");

                if (!email || !password) {
                    errorText.innerText = "Email and password are required";
                    errorMessageContainer.classList.remove("d-none");
                    return;
                }
                
                let emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailPattern.test(email)) {
                    errorText.innerText = "Invalid email format";
                    errorMessageContainer.classList.remove("d-none");
                    return;
                }
                
                if (password.length < 6) {
                    errorText.innerText = "Password must be at least 6 characters";
                    errorMessageContainer.classList.remove("d-none");
                    return;
                }

        


            const loginData = {email,password};

            const response = await fetch('/user/login',{
                method : 'POST',
                headers : {'Content-Type' : 'application/json'},
                body : JSON.stringify(loginData)
            })

            const data = await response.json();
            // console.log(data)

            if(!response.ok){
                throw new Error(data.error || 'Something went wrong');
            }
            else if(data.success){
                Swal.fire({
                    icon : 'success',
                    text : data.message || 'Login successful',
                    timer :1500,
                    showConfirmButton : false,
                })

                setTimeout(()=>{
                    window.location.href = data.redirectUrl || '/'
                },2000)
            }else{
        
                Swal.fire({
                    icon : 'error',
                    text : data.message || "Login failed",
                    timer : 1000,
                    showCancelButton: false,
                    didOpen: () => {
                    const confirmBtn = Swal.getConfirmButton();
                    if (confirmBtn) confirmBtn.style.display = 'none';
        }
                })
            }
        })
        </script>

    </body>