<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(to top, #2A5788, #0D1B2A);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .otp-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            padding: 30px;
            text-align: center;
        }

        h2 {
            font-family: 'outfit', serif;
            font-size: 48px;
            color: #1E2A44;
            margin-bottom: 20px;
            text-shadow: none;
            outline: none;
            -webkit-text-stroke-width: 0;
        }

        .instruction {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        .otp-input {
            width: 220px;
            /* Adjusted to approximate the combined width of four 50px inputs with 10px gaps */
            height: 50px;
            padding: 10px;
            text-align: center;
            font-size: 18px;
            border: 2px solid #615e5e;
            border-radius: 10px;
            outline: none;
            font-family: 'Outfit', sans-serif;
            margin: 0 auto;
            display: block;
        }

        .send-btn {
            background: #6B46C1;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'Outfit', sans-serif;
            width: 100%;
            max-width: 350px;
            margin-top: 20px;
        }

        .send-btn-1 {
            background: #6B46C1;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'Outfit', sans-serif;
            width: 100%;
            max-width: 250px;
            margin-top: 20px;
        }

        .send-btn-1:hover {
            background: #5A36A4;
        }


        .send-btn:hover {
            background: #5A36A4;
        }

        .back-link {
            margin-top: 20px;
            font-size: 14px;
            color: #6B46C1;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .branding {
            margin-top: 10px;
            font-size: 14px;
            color: #666;
            font-family: 'Bellefair', serif;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .otp-container {
                max-width: 90%;
                padding: 25px;
            }

            h2 {
                font-size: 40px;
            }

            .instruction {
                font-size: 15px;
            }

            .otp-input {
                width: 200px;
                height: 45px;
                font-size: 16px;
            }

            .send-btn {
                max-width: 100%;
                padding: 10px;
            }
        }

        @media (max-width: 576px) {
            .otp-container {
                padding: 20px;
            }

            h2 {
                font-size: 36px;
                margin-bottom: 15px;
            }

            .instruction {
                font-size: 14px;
                margin-bottom: 15px;
            }

            .otp-input {
                width: 180px;
                height: 40px;
                font-size: 14px;
            }

            .send-btn {
                font-size: 14px;
                padding: 8px;
                margin-top: 15px;
            }

            .back-link,
            .branding {
                font-size: 13px;
            }
        }

        @media (max-width: 400px) {
            .otp-container {
                padding: 15px;
            }

            h2 {
                font-size: 32px;
                margin-bottom: 10px;
            }

            .instruction {
                font-size: 13px;
                margin-bottom: 10px;
            }

            .otp-input {
                width: 160px;
                height: 35px;
                font-size: 12px;
            }

            .send-btn {
                font-size: 13px;
                padding: 6px;
                margin-top: 10px;
            }

            .back-link,
            .branding {
                font-size: 12px;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <div class="otp-container">
        <div class="otp-div">
            <div class="px-3 py-3">
                <h2 class="fw-bold mb-4 text-center">Confirm with OTP</h2>
                <p class="instruction">Please check your mail address for OTP</p>

                <form id="otpVerifyForm">
                    <!-- Timer Text -->
                    <p style="color: #ff0000;" id="timerText">Resend OTP in <span id="timerDisplay">00:10</span></p>

                    <!-- Single Error Message Display -->
                    <p id="errorMessageContainer" class="text-danger text-center <%= errorMessage ? '' : 'd-none' %>">
                        <% if (errorMessage) { %>
                            <span id="errorText">
                                <%= errorMessage %>
                            </span>
                            <% } else { %>
                                <span id="errorText"></span>
                                <% } %>
                    </p>

                    <!-- Single OTP Input -->
                    <input type="text" class="otp-input" maxlength="4" placeholder="Enter OTP" id="otp" name="otp">

                    <!-- Confirm Button -->
                    <button type="submit" id="submitBtn" class="btn send-btn">Confirm</button>

                    <!-- Resend OTP Link (Instead of Button) -->
                    <p class="mt-3">
                        <span id="timerText" class="text-center me-3" style="font-size: 0.8em; color: #ff0000;"></span>

                        <button type="button" id="resendBtn" class="btn send-btn-1" onclick="resendOTP()">Resend
                            OTP</button>

                    </p>

                    <!-- Back Link -->
                    <a href="/register" class="back-link">Go back to Signup page</a>

                    <!-- Branding -->
                    <p class="branding">ElectroMania</p>
            </div>
        </div>
    </div>

    <script>
        let timerSeconds = 10;
        let countdown;

        function startOTPTimer(duration) {
            let timeLeft = duration;
            const timerDisplay = document.getElementById("timerDisplay");
            const resendBtn = document.getElementById("resendBtn");
            const submitBtn = document.getElementById("submitBtn");

            resendBtn.disabled = true; // Disable resend initially

            countdown = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60).toString().padStart(2, '0');
                const seconds = (timeLeft % 60).toString().padStart(2, '0');
                timerDisplay.innerText = `${minutes}:${seconds}`;

                timeLeft--;

                if (timeLeft < 0) {
                    clearInterval(countdown);
                    timerDisplay.innerText = "00:00";
                    resendBtn.disabled = false;
                    document.getElementById("timerText").innerText = "Didn't get the OTP?";
                }
            }, 1000);
        }

        // Call this on page load
        window.onload = () => {
            startOTPTimer(timerSeconds);
        };

        async function resendOTP() {
            clearInterval(countdown);

            document.getElementById("timerText").innerHTML = `Resend OTP in <span id="timerDisplay">00:10</span>`;

            startOTPTimer(timerSeconds);
            try {
                const response = await fetch('/user/resendOtp', {
                    method: "POST",
                    headers: { "Content-type": "application/json" },
                })

                const data = await response.json();

                if (!response.ok) {

                    Swal.fire({
                        icon: "error",
                        text: "Failed to sent OTP . Please try again later.",
                        timer: 1500,
                        showConfirmButton: false
                    })
                    return;
                }

                Swal.fire({
                    icon: "success",
                    text: "OTP sented successfully.",
                    timer: 1500,
                    showConfirmButton: false
                })


            } catch (error) {
                console.log(error)
                Swal.fire({
                    icon: "error",
                    text: data.message || "Failed to sent OTP",
                    timer : 1500,
                    showConfirmButton : false
                });
            }

            setTimeout(() => {
                    window.location.href = data.redirectUrl || '/user/verifyOtp';
                }, 2000);
        }

        document.getElementById("otpVerifyForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            const otp = document.getElementById('otp').value.trim();
            const errorMessageContainer = document.getElementById("errorMessageContainer");
            const errorText = document.getElementById("errorText");


            errorText.innerText = "";
            errorMessageContainer.classList.add("d-none");

            if (otp.length < 4) {
                errorText.innerText = "OTP should contain four characters.";
                errorMessageContainer.classList.remove('d-none');
                return;
            }

            try {
                const response = await fetch('/user/verifyOtp', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ otp: otp })
                });

                const data = await response.json();

                if (!response.ok) {
                    Swal.fire({
                        icon: "error",
                        title: "OTP Verification Failed",
                        text: data.message || "Something went wrong"
                    });
                    return;
                }

                Swal.fire({
                    icon: "success",
                    title: "OTP Verified",
                    text: data.message,
                    timer: 2000,
                    showConfirmButton: false
                });

                setTimeout(() => {
                    window.location.href = data.redirectUrl || '/user/login';
                }, 2000);

            } catch (error) {
                console.error(error);
                Swal.fire({
                    icon: "error",
                    title: "Something went wrong",
                    text: error.message || "Unexpected error occurred"
                });
            }
        });

    </script>
</body>